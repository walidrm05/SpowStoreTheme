{% layout 'theme' %}

<!-- Contenedor principal del producto -->
<div class="product-container">

  <!-- Secci칩n de im치genes del producto -->
  <div class="product-images">
    {% if product.images.size > 0 %}
      <div class="main-image">
        <img src="{{ product.images[0].src | img_url: '1024x1024' }}" alt="{{ product.title }}" />
      </div>
      {% if product.images.size > 1 %}
        <div class="thumbnail-images">
          {% for image in product.images %}
            <img src="{{ image.src | img_url: '200x200' }}" alt="{{ product.title }}" class="thumbnail" />
          {% endfor %}
        </div>
      {% endif %}
    {% endif %}
  </div>

  <!-- Detalles del producto -->
  <div class="product-details">
    <h1 class="product-title">{{ product.title }}</h1>
    <p class="product-price">{{ product.price | money }}</p>

    <div class="product-description">
      {{ product.description | escape }}
    </div>

    <!-- Bot칩n de compra -->
    <form method="post" action="/cart/add">
      <input type="hidden" name="id" value="{{ product.variants.first.id }}" />
      <button type="submit" class="btn-add-to-cart">Agregar al carrito</button>
    </form>
  </div>

</div>

<!-- Estilo para la p치gina de producto -->
<style>
  .product-container {
    display: flex;
    max-width: 1200px;
    margin: auto;
  }

  .product-images {
    flex: 1;
    padding: 20px;
  }

  .main-image img {
    width: 100%;
    border-radius: 10px;
  }

  .thumbnail-images {
    display: flex;
    justify-content: space-between;
    margin-top: 10px;
  }

  .thumbnail {
    cursor: pointer;
    border-radius: 5px;
    transition: transform 0.2s;
  }

  .thumbnail:hover {
    transform: scale(1.05);
  }

  .product-details {
    flex: 1;
    padding: 20px;
    display: flex;
    flex-direction: column;
  }

  .product-title {
    font-size: 2em;
    margin: 0;
  }

  .product-price {
    font-size: 1.5em;
    color: #333;
  }

  .product-description {
    margin: 20px 0;
  }

  .btn-add-to-cart {
    padding: 15px;
    background-color: #000;
    color: #fff;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    font-size: 1em;
    transition: background-color 0.3s;
  }

  .btn-add-to-cart:hover {
    background-color: #444;
  }
</style>

{% section 'footer' %}
